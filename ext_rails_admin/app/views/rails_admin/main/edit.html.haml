:ruby
  modal = params[:modal].to_b
  form_options = {
    url: edit_path(@abstract_model, @object.id, modal: (true if modal)),
    as: @abstract_model.param_key,
    html: {
      method: "put",
      multipart: true,
      class: "form-horizontal denser",
      data: ({ js: { title: @page_name }.to_json, type: 'json' } if modal)
    }
  }

= rails_admin_form_for @object, form_options do |form|
  = form.generate action: :update
